{
  "manifest_version": 2,

  "name": "Gecko420",
  "short_name": "Gecko",
  "description": "A Echo360 Lecture Downloader",
  "version": "0.1.1",
  "default_locale": "en",
  "icons": { "16": "drawables/launcher/icon-16.png",
           "64": "drawables/launcher/icon-64.png",
          "128": "drawables/launcher/icon-128.png" },
  "browser_action": {
    "default_popup": "src/popup.html"
  },
  "background": {
    "scripts": ["src/background.js"]
  },
  "incognito": "spanning",
  "content_security_policy": "script-src 'self'; object-src 'self' ; 'unsafe-inline'; fonts.googleapis.com/",
  "permissions": [
	  "webRequest",
	  "*://echo360.org.au/section/",
	  "downloads",
      "tabs"
  ]
}
